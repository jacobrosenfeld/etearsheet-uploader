# Google OAuth (Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# On Vercel, set this to https://<your-domain>/api/auth/callback
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback


# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000


# Cookie/session secret (random string)
SESSION_SECRET=change_me_to_a_long_random_value


# Portal passwords
PORTAL_PASSWORD=regular_portal_password
ADMIN_PASSWORD=separate_admin_password


# Optional: Drive config folder ID (app creates one if omitted)
APP_CONFIG_FOLDER_NAME=UploadPortalConfig
APP_CONFIG_FILE_NAME=upload-portal-config.json